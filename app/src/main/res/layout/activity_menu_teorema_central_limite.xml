<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".menu_teorema_central_limite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/TCL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="botonTLC1"
                android:layout_marginTop="20dp"
                android:text="Teorema central del limite para la media" />

            <Button
                android:id="@+id/TCL11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="botonTLC4"
                android:text="Teorema central del limite para suma de variables" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="botonTLC3"
                android:text="Teorema central del limite para diferencia de medias" />

            <Button
                android:id="@+id/TCL2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="botonTLC2"
                android:text="Teorema central del limite para proporciones" />

            <Button
                android:id="@+id/TCL3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="botonTLC5"
                android:text="teorema central del limite para diferencia de proporciones" />

            <Button
                android:id="@+id/button16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:visibility="gone"
                tools:visibility="gone" />

            <Button
                android:id="@+id/button17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:visibility="gone"
                tools:visibility="gone" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:visibility="gone"
                tools:visibility="gone" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:visibility="gone"
                tools:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>